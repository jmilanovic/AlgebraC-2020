@model IEnumerable<AlgebraSeminar.Models.Predbiljezba>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Style the header */

    </style>



</head>
<body>

    <div class="menu" style="background-color:Black;">
        <div class="wrapper">

            <style>
                .button {
                    display: inline-block;
                    padding: 10px 10px;
                    text-align: center;
                    text-decoration: none;
                    color: white;
                    background-color: black;
                    border-radius: 1px;
                    outline: none;
                }

                    .button:hover {
                        background-color: white
                    }

                    .button:active {
                        display: inline-block;
                        padding: 10px 10px;
                        text-align: center;
                        text-decoration: none;
                        color: black;
                        background-color: white;
                        border-radius: 6px;
                    }
            </style>

            <a class="button" style="text-decoration:none" href="\Predbiljezbas\Predbiljezba">Predbiljezba </a>
            <a class="button" style="text-decoration:none" href="\Seminars\Seminari">Seminari </a>
          
        </div>
    </div>

  
    <br />
    <h6>Popis seminara koji se održavaju u Algebri:</h6>
    <br />

    <style>
        table, th, td {
            border: 1px solid gray;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>

    <table style="width:100%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.IdPredbiljezba">Odaberi</a>
                </td>
            </tr>
        }

    </table>
</body>
