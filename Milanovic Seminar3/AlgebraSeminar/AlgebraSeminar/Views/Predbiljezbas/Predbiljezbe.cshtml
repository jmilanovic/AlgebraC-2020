

@model IEnumerable<AlgebraSeminar.ViewModel.UnosViewModel>



<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Style the header */

    </style>



</head>
<body>

    <div class="menu" style="background-color:Black;">
        <div class="wrapper">

            <style>
                .button {
                    display: inline-block;
                    padding: 10px 10px;
                    text-align: center;
                    text-decoration: none;
                    color: white;
                    background-color: black;
                    border-radius: 1px;
                    outline: none;
                }

                    .button:hover {
                        background-color: white
                    }

                    .button:active {
                        display: inline-block;
                        padding: 10px 10px;
                        text-align: center;
                        text-decoration: none;
                        color: black;
                        background-color: white;
                        border-radius: 6px;
                    }
            </style>

            <a class="button" style="text-decoration:none" href="\Predbiljezbas\Predbiljezba">Predbiljezba </a>
            <a class="button" style="text-decoration:none" href="\Seminars\Seminari">Seminari </a>
            <a class="button" style="text-decoration:none" href="\Predbiljezbas\Predbiljezbe">Predbiljezbe </a>

        </div>
    </div>

    <p>
        @using (Html.BeginForm("Predbiljezbe", "Predbiljezbas", FormMethod.Get))
        {
            <b>Pretraži naziv:</b>
            @Html.TextBox("pretrazi") <input type="submit" value="Pretrazi" />
        }
    </p>

  

    <style>
        table, th, td {
            border: 1px solid gray;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>


    <table style="width:100%">
        <tr>

            <td></td>
            <td>Naziv</td>
            <td>Ime</td>
            <td>Prezime</td>
            <td>Datum</td>
            <td>Adresa</td>
            <td>Email</td>
            <td>Telefon</td>
            <td>Status</td>


            @foreach (var item in Model)
            {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPredbiljezba">Odaberi</a>
            </td>
            <td>@item.Naziv</td>
            <td>@item.Ime</td>
            <td>@item.Prezime</td>
            <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Datum))</td>
            <td>@item.Adresa</td>
            <td>@item.Email</td>
            <td>@item.Telefon</td>
            <td>@item.Status</td>

            <td>@Html.DisplayFor(modelItem => item.predbiljezbaVm.Status)</td>
        </tr>
        }


        </table>

    </body>
