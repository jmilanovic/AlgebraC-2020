@model IEnumerable<AlgebraSeminar.Models.Seminar>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="form-group">
    <a class="button" style="text-decoration:none; background-color:dodgerblue; color:white; border-radius: 10px" href="\Seminars\Create">Novi tecaj</a>
</div>
<style>
    table, th, td {
        border: 1px solid gray;
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<table style="width:100%">
    <tr>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Popunjen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predavac)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Popunjen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Predavac)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdSeminar">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdSeminar">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdSeminar">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
